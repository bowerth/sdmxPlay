# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# GET     /                              controllers.Weather.index
# GET     /:location/:year/              controllers.Weather.main(location: String, year: String)
# GET     /:location/:year               controllers.Weather.redirect(location: String, year: String)
# GET     /:location/:year/:format/      controllers.Weather.plot(location: String, year: String, format: String)
# GET     /:location/:year/:format       controllers.Weather.plot(location: String, year: String, format: String)

GET     /                                controllers.Sdmx.index
GET     /:provider/:query/               controllers.Sdmx.main(provider: String, query: String, start: Option[String], end: Option[String])
GET     /:provider/:query                controllers.Sdmx.redirect(provider: String, query: String, start: Option[String], end: Option[String])
# GET     /:provider/:query/               controllers.Sdmx.main(provider: String, query: String, start: Option[String] ?= Option[String]("2000"), end: Option[String] ?= Option[String]("2015"))
# GET     /:provider/:query                controllers.Sdmx.redirect(provider: String, query: String, start: Option[String] ?= Option[String]("2000"), end: Option[String] ?= Option[String]("2015"))

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                  controllers.Assets.at(path="/public", file)
